<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:id="@+id/out_layout"
    tools:context=".fragment.CityFG">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/frag_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/frag_iv_today"
                android:layout_width="215dp"
                android:layout_height="199dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon" />
            <TextView
                android:id="@+id/frag_tv_currenttemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3℃"
                android:textSize="40sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/frag_tv_city"
                style="@style/todaytext"
                android:text="北京"
                android:layout_below="@id/frag_tv_currenttemp"/>
            <TextView
                android:id="@+id/frag_tv_condition"
                style="@style/todaytext"
                android:text="晴"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/frag_tv_currenttemp"
                android:layout_toRightOf="@id/frag_tv_city"/>

            <TextView
                android:id="@+id/frag_tv_date"
                android:text="2019-11-05"
                android:layout_below="@id/frag_iv_today"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                style="@style/todaytext" />
            <TextView
                android:id="@+id/frag_tv_wind"
                style="@style/todaytext"
                android:layout_below="@id/frag_tv_date"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/frag_tv_line1"
                android:text="东北风3~4级"/>
            <TextView
                android:id="@+id/frag_tv_line1"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:background="#000000"
                android:layout_alignBottom="@id/frag_tv_wind"
                android:layout_toLeftOf="@+id/frag_tv_temprange"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/frag_tv_temprange"
                style="@style/todaytext"
                android:text="9~-1℃"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/frag_tv_wind"/>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/frag_index_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frag_bg"
            android:layout_margin="10dp"
            android:padding="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2E8B57"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_tv_dress"
                    style="@style/indextext"
                    android:text="穿衣指数"
                    android:drawableLeft="@mipmap/icon_cloth"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/dress0"
                    style="@style/indextext"
                    android:text="" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/dress"
                    style="@style/indextext"
                    android:layout_below="@+id/frag_index_tv_dress"
                    android:text="" />
                </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2E8B57"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_tv_washcar"
                    style="@style/indextext"
                    android:text="洗车指数"
                    android:layout_below="@+id/dress"
                    android:drawableLeft="@mipmap/icon_car"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/washcar0"
                    style="@style/indextext"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/washcar"
                    style="@style/indextext"
                    android:layout_below="@+id/frag_index_tv_washcar"
                    android:text="" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2E8B57"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_tv_cold"
                    style="@style/indextext"
                    android:text="感冒指数"
                    android:drawableLeft="@mipmap/icon_ganmao"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/cold0"
                    style="@style/indextext"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cold"
                    style="@style/indextext"

                    android:layout_below="@+id/frag_index_tv_cold"
                    android:text="" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2E8B57"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_tv_sport"
                    style="@style/indextext"
                    android:text="运动指数"
                    android:drawableLeft="@mipmap/icon_sport"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/sport0"
                    style="@style/indextext"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sport"
                    style="@style/indextext"
                    android:layout_below="@+id/frag_index_tv_sport"
                    android:text="" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2E8B57"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/frag_index_tv_rays"
                    style="@style/indextext"
                    android:text="紫外线指数"
                    android:drawableLeft="@mipmap/icon_light"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/rays0"
                    style="@style/indextext"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rays"
                    style="@style/indextext"
                    android:layout_below="@+id/frag_index_tv_rays"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/frag_center_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/frag_bg"
            >
            <TextView
                android:id="@+id/santian1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未来三天天气情况"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>